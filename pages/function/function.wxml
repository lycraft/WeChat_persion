<view class="page">
    <view class="page__hd">
        <view class="page__title">By Lycraft</view>
        <view class="page__desc">www.lycraft.top</view>
    </view>
    <view class="page__bd">
        <view class="weui-grids">
            <block wx:for="{{grids}}" wx:item="*this" wx:key="key">
                <navigator url="../{{item.path}}/{{item.path}}" class="weui-grid" hover-class="weui-grid_active">
                    <image class="weui-grid__icon" src="/images/info/{{item.icon}}" />
                    <view class="weui-grid__label">{{item.name}}</view>
                </navigator>
            </block>
        </view>
    </view>
</view>