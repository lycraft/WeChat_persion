.page {
    width: 100%;
    height: 100%;
    font-family: "PingFang SC", "Microsoft Yahei", Arial, Helvetica, sans-serif;
    font-size: 14px;
    background-color: #fff;
}

view, image {
    /*border: 1px #d6d6d6 solid;*/
}

/**图片区**/

.page-header {
    position: relative;
}

.swiper-image {
    width: 100%;
    height: 100%;
    filter: blur(2px);
}

.header-info {
    position: absolute;
    top: 0px;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.header-icon {
    width: 120rpx;
    height: 120rpx;
    border-radius: 60rpx;
}

.info-name {
    color: #333;
    font-size: 20px;
    margin: 8rpx;
}

/**列表**/

.page-item {
    margin: 0 30rpx;
    padding: 40rpx 0;
    border-bottom: 1px #ccc solid;
    display: flex;
    flex-direction: row;
}

.p-icon {
    width: 40rpx;
    height: 40rpx;
}

.item-name {
    flex: 1;
    color: #333;
    font-size: 14px;
    margin-left: 20rpx;
}

/**隐藏**/

.n {
    display: none;
}

/**居中**/

.cc {
    display: flex;
    justify-content: center;
    align-items: center;
}

/**垂直居中**/

.vc {
    display: flex;
    align-items: center;
}
